{
    "include": [
        "src/**/*.ts",
        "rollup.config.ts",
    ],
    "compilerOptions": {
        "allowJs": true,
        "declaration": false,
        "declarationMap": false,
        "noEmit": true,
        "esModuleInterop": true,
        "lib": ["es2020"],
        "module": "Node16",
        "moduleResolution": "Node16",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "lib",
        "resolveJsonModule": true,
        "rootDir": "src",
        "sourceMap": true,
        "strict": true,
        "target": "es2020",
    }
}
