{
    "include": [
        "src"
    ],
    "compilerOptions": {
        "outDir": "lib",
        "rootDir": "src",
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": [
            "es6"
        ],
        "alwaysStrict": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
    }
}
