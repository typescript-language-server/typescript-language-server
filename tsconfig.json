{
    "include": [
        "src"
    ],
    "compilerOptions": {
        "outDir": "lib",
        "rootDir": "src",
        "strict": true,
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "target": "es2020",
        "module": "Node16",
        "moduleResolution": "Node16",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": ["es2020"],
        "skipLibCheck": true,
    }
}
