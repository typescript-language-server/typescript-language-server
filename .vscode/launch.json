{
        "version": "0.2.0",
        "configurations": [
            {
                "type": "node",
                "request": "launch",
                "name": "Mocha Tests",
                "program": "${workspaceRoot}/node_modules/jest/bin/jest",
                "env": {
                    "TS_NODE_PROJECT": "${workspaceRoot}/tsconfig.json",
                    "PATH": "${workspaceRoot}/node_modules/.bin/:${env:PATH}"
                },
                "internalConsoleOptions": "openOnSessionStart"
            }
        ]
    }
